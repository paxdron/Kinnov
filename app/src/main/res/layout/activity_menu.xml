<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuMaquina">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footerHeight"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:id="@+id/footerChanels"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/footer_fab_margin"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/footerHeight"
        android:layout_marginBottom="@dimen/footer_fab_margin"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        fancy:fb_defaultColor="@color/colorAccent"
        fancy:fb_focusColor="@color/colorAccentDark"
        fancy:fb_radius="64dp"
        fancy:fb_text="Seleccionar"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="texto"
        android:id="@+id/tvwea"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/tvwea"
        android:layout_above="@+id/footerChanels"
        >
        <ExpandableListView
            android:id="@+id/lvProtocols"
            android:layout_below="@+id/listProtocols"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            />
    </LinearLayout>
</RelativeLayout>
